/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running with conda/mamba
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/

conda {
    enabled         = true
    useMamba        = true
    createTimeout   = '1 h'
    cacheDir        = "$HOME/.conda/envs"
}

params {
    // Conda-specific parameters
    conda_cache_dir = "$HOME/.conda/envs"
}
